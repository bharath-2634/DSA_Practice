Question: https://www.geeksforgeeks.org/problems/topological-sort/1

Solution:

class Solution {
    
    public void generateAdjList(int[][] edges,HashMap<Integer,List<Integer>> adjList,int[] inDegree) {
        for(int[] edge : edges) {
            int u = edge[0];
            int v = edge[1];
            inDegree[v]++;
            
            if(!adjList.containsKey(u)) {
                adjList.put(u,new ArrayList<>());
            }
            
            adjList.get(u).add(v);
        }
    }
    
    public ArrayList<Integer> topoSort(int V, int[][] edges) {
        HashMap<Integer,List<Integer>> adjList = new HashMap<>();
        int[] inDegree = new int[V];
        generateAdjList(edges,adjList,inDegree);
        
        Queue<Integer> q = new LinkedList<>();
        for(int i=0;i<V;i++) {
            if(inDegree[i]==0) {
                q.offer(i);
            }
        }
        
        ArrayList<Integer> res = new ArrayList<>();
        while(!q.isEmpty()) {
            int node = q.poll();
            res.add(node);
            
            for(int adjNode : adjList.getOrDefault(node,new ArrayList<>())) {
                inDegree[adjNode]--;
                if(inDegree[adjNode]==0) {
                    q.offer(adjNode);
                }
            }
        }
        
        return res;
    }
}
