Question: https://leetcode.com/problems/number-of-provinces/

Solution:

import java.util.*;

/* This is my dfs approach

class Main {

    public static void generateAdjList(int[][] edges,Map<Integer,List<Integer>> adjList) {
        for(int i=0;i<edges.length;i++) {
            adjList.put(i,new ArrayList<>());
            for(int j=0;j<edges[i].length;j++) {
                if(i!=j && edges[i][j]==1) {
                    adjList.get(i).add(j);
                }
            }
        }
    }

    public static void dfs(int node,Map<Integer,List<Integer>> adjList,boolean[] visited) {
        visited[node] = true;

        for(int adjNode : adjList.getOrDefault(node,new ArrayList<>())) {
            if(!visited[adjNode]) {
                dfs(adjNode,adjList,visited);
            }
        }
    }

    public static int numberOfProvinces(int[][] edges) {
        Map<Integer,List<Integer>> adjList = new HashMap<>();
        generateAdjList(edges,adjList);

        int count=0;
        boolean[] visited = new boolean[edges.length];
        for(int node : adjList.keySet()) {
            if(!visited[node]) {
                count++;
                dfs(node,adjList,visited);
            }
        }

        return count;
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
