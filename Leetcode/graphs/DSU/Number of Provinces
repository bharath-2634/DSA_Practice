/*

This is my dfs approach
class Main {

    public static void generateAdjList(int[][] edges,Map<Integer,List<Integer>> adjList) {
        for(int i=0;i<edges.length;i++) {
            adjList.put(i,new ArrayList<>());
            for(int j=0;j<edges[i].length;j++) {
                if(i!=j && edges[i][j]==1) {
                    adjList.get(i).add(j);
                }
            }
        }
    }

    public static int numberOfProvinces(int[][] edges) {
        Map<Integer,List<Integer>> adjList = new HashMap<>();
        generateAdjList(edges,adjList);

        boolean[] visited = new boolean[edges.length];
        Queue<Integer> q = new LinkedList<>();
        int count=0;
        for(int node : adjList.keySet()) {
            if(!visited[node]) {
                q.offer(node);
                count++;
                visited[node]= true;
                while(!q.isEmpty()) {
                    int p = q.poll();
                
                    for(int adjNode : adjList.getOrDefault(p,new ArrayList<>())) {
                        if(!visited[adjNode]) {
                            visited[adjNode] = true;
                            q.offer(adjNode);
                        }
                    }
                }
            }
        }

        return count;
    } 

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int[][] edges = new int[n][n];

        for(int i=0;i<n;i++) {
            edges[i][0] = sc.nextInt();
            edges[i][1] = sc.nextInt();
            edges[i][2] = sc.nextInt();
        }

        System.out.println(numberOfProvinces(edges));
    }
}
