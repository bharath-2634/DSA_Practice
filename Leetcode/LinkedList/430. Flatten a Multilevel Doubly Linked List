*/

class Solution {

    public Node dfs(Node current) {
        Node curr = current;
        Node last = current;

        while (curr != null) {
            Node next = curr.next;

            if (curr.child != null) {
                curr.child.prev = curr;
                curr.next = curr.child;
                Node childTail = dfs(curr.child);
                curr.child = null;

                childTail.next = next;
                if (next != null) {
                    next.prev = childTail;
                }

                last = childTail;
            } else {
                last = curr;
            }

            curr = next;
        }

        return last;
    }


    public Node flatten(Node head) {
        if(head==null) return head;
        dfs(head);
        return head;
    }
}
