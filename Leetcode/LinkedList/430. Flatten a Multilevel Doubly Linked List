/*

This is my iterative approach
class Solution {

    public Node getEndOfList(Node child) {
        Node move=child;

        while(move!=null) {
            if(move.next==null) {
                return move;
            }
            move = move.next;
        }

        return child;
    }

    // public void displayList(Node node) {
