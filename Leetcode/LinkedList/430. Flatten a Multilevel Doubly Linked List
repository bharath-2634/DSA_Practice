    public Node flatten(Node head) {

        if(head==null) return head;

        Node current = head, tail_list = head.next;

        while(tail_list!=null) {
            if(current.child!=null) {
                Node next_list = tail_list;
                current.child.prev = current;
                current.next = current.child;
                Node end_list = getEndOfList(current.child);
                current.child = null;
                end_list.next = next_list;
                next_list.prev = end_list;
