class Solution {
    public void getValidParentheses(String s,int idx,int openCount,int closeCount,int open_rem,int close_rem,StringBuilder sb,Set<String> res) {
        if(idx==s.length()) {
            if(openCount == closeCount && open_rem==0 && close_rem==0) {
                res.add(sb.toString());
            }
            return;
