    public List<String> removeInvalidParentheses(String s) {
        Set<String> res = new HashSet<>();
        int open_rem=0,close_rem=0;
        
        for(char c : s.toCharArray()) {
            if(c=='(') {
                open_rem++;
            }else if(c==')') {
                if(open_rem>0) open_rem--;
                else close_rem++;
            }
        }

        getValidParentheses(s,0,0,0,open_rem,close_rem,new StringBuilder(),res);
        return new ArrayList<>(res);
    }
}

*/

class Solution {

    public int getCountToBalance(String s) {
        int balance = 0;
        for(char c: s.toCharArray()) {
            if(c == '(') balance += 1;
            if(c == ')') balance -= 1;
        }
        return balance;
    }

    public boolean isStrictlyBalanced(String s) {
        int balance = 0;
        for(char c: s.toCharArray()) {
            if(c == '(') balance += 1;
            if(c == ')') balance -= 1;
            if(balance < 0) return false;
        }
        return balance == 0;
    }

    public List<String> removeInvalidParentheses(String s) {
        Set<String> res = new HashSet<>();
        Queue<String> q = new LinkedList<>();
        q.offer(s);
        boolean found = false;

        while(!q.isEmpty() && !found) {
            Set<String> nextSet = new HashSet<>();
            int size = q.size();

            for(int i=0;i<size;i++) {
                String word = q.poll();

                int balance = getCountToBalance(word);
                if(balance==0 && isStrictlyBalanced(word)) {
                    found = true;
                    res.add(word);
                    continue;
                }

                if(found) continue;
                char removeChr = balance>0 ? '(' : ')';

                for(int idx=0;idx<word.length();idx++) {
                    if(word.charAt(idx)==removeChr) {
                        nextSet.add(new StringBuilder(word).deleteCharAt(idx).toString());
                    }
                }
            }

            if(!found) {
                for(String word : nextSet) {
                    q.offer(word);
                }
            }
        }


        return new ArrayList<>(res);
    }
}
