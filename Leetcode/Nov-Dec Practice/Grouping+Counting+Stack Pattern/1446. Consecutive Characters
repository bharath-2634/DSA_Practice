Question: https://leetcode.com/problems/consecutive-characters/


class Solution {

    /*

    This is my recursion+Memoization approach
    public int getMaxPower(String s,int idx,int current_max,int best,int[] dp) {
        if(idx==s.length()) return Math.max(current_max,best);

        if(dp[idx]!=0) return dp[idx];

        if(idx>0 && s.charAt(idx-1)==s.charAt(idx)) {
            return dp[idx] = getMaxPower(s,idx+1,current_max+1,Math.max(best,current_max+1),dp);
        }else {
            return dp[idx] = getMaxPower(s,idx+1,1,best,dp);
        }
    }

    public int maxPower(String s) {
        int[] dp = new int[s.length()];
        return getMaxPower(s,0,0,0,dp);
    }

    */

    /*

    This is my iterative approach
    public int maxPower(String s) {
        int len=1,max_len = Integer.MIN_VALUE;

        for(int i=1;i<s.length();i++) {
            if(s.charAt(i)==s.charAt(i-1)) {
                len++;
                max_len = Math.max(max_len,len);
            }else {
                len=1;
            }
        }
        return max_len==Integer.MIN_VALUE ? 1 : max_len;
    }
    */

    public int maxPower(String s) {
        int[] dp = new int[s.length()];
        dp[0] = 1;
        int ans = Integer.MIN_VALUE;

        for(int i=1;i<s.length();i++) {
            if(s.charAt(i)==s.charAt(i-1)) {
                dp[i] = dp[i-1]+1;
                ans= Math.max(ans,dp[i]);
            }else {
                dp[i] = 1;
            }
        }

        ans = Math.max(ans,dp[dp.length-1]);
        return ans;
    }
}

/*
    s="leetcode"
    l!=e ->len=1
    e==e -> len++ len=2
    t!=e -> len=1
    c!=t -> len=1
    o!=c -> len=1
    d!=o -> len=1
    e!=d -> len=1

    max_len = 2

    s="abbcccddddeeeeedcba"
    b!=a ->len=1
    b==b ->len++ -> len=2
    c!=b ->len=1
    c==c ->len++ -> len=2
    c==c ->len++ -> len=3


 */
