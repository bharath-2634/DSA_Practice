Question : https://www.geeksforgeeks.org/problems/top-view-of-binary-tree/1

Solution :
/*
class Node {
    int data;
    Node left, right;

    Node(int val) {
        this.data = val;
        this.left = null;
        this.right = null;
    }
}
*/

class Pair {
    Node node;
    int level;
    int dist;
    
    public Pair(Node n,int l,int d) {
        this.node = n;
        this.level = l;
        this.dist = d;
    }
}

class Solution {
    
    /*
    This is my DFS Solution
    public void getTopView(Node node,int dist,int level,TreeMap<Integer,int[]> res) {
        if(node==null) return;
        
        getTopView(node.left,dist-1,level+1,res);
        
        if(!res.containsKey(dist) || level<res.get(dist)[0]) {
            res.put(dist,new int[]{level,node.data});
        }
        
        
        getTopView(node.right,dist+1,level+1,res);
    }
    
    public ArrayList<Integer> topView(Node root) {
        TreeMap<Integer,int[]> res = new TreeMap<>(); // key = dist, value = {level,data}
        getTopView(root,0,0,res);
        
        ArrayList<Integer> ds = new ArrayList<>();
        for(int[] val : res.values()) {
            ds.add(val[1]);
        }
        
        return ds;
    }
    */
    
    public ArrayList<Integer> topView(Node root) {
        
        ArrayList<Integer> res = new ArrayList<>();
        if(root==null) return res;
        
        Queue<Pair> q = new LinkedList<>();
        q.offer(new Pair(root,0,0));
        TreeMap<Integer,int[]> tMap = new TreeMap<>();
        
        while(!q.isEmpty()) {
            Pair p = q.poll();
            Node node = p.node;
            int level = p.level;
            int dist = p.dist;
            
            if(!tMap.containsKey(dist) || tMap.get(dist)[0]>level) {
                tMap.put(dist,new int[]{level,node.data});
            }
            
            if(node.left!=null) {
                q.offer(new Pair(node.left,level+1,dist-1));
            }
            
            if(node.right!=null) {
                q.offer(new Pair(node.right,level+1,dist+1));
            }
        }
        
        for(int[] values : tMap.values()) {
            res.add(values[1]);
        }
        
        return res;
        
    }
}
