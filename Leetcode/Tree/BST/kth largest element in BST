Solution:

private static int kth_largest_element = -1,count=0;

    public static boolean findKthLargest(Node node,int k) {
        if(node==null) return false;

        if(findKthLargest(node.right,k)) return true;
        count++;
        if(count==k) {
            kth_largest_element = node.data;
            return true;
        }
        
        if(findKthLargest(node.left,k)) return true;

        return false;
    }
