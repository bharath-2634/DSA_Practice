Question: https://leetcode.com/problems/balance-a-binary-search-tree/

Solution:

/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {

    public void getNodes(TreeNode node,List<Integer> res) {
        if(node==null) return;

        getNodes(node.left,res);
        res.add(node.val);
        getNodes(node.right,res);
    }

    public TreeNode buildBST(List<Integer> res,int l,int r) {
        if(l>r) return null;

        int mid= l+(r-l)/2;
        TreeNode root= new TreeNode(res.get(mid));

        root.left = buildBST(res,l,mid-1);
        root.right = buildBST(res,mid+1,r);

        return root;
    }

    public TreeNode balanceBST(TreeNode root) {
        List<Integer> res = new ArrayList<>();
        getNodes(root,res);
        System.out.println(res);
        return buildBST(res,0,res.size()-1);
    }
}
