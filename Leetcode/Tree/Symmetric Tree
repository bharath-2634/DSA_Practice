Question : https://leetcode.com/problems/symmetric-tree/

Solution :
/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public boolean checkIsSymmetric(TreeNode left,TreeNode right) {
        
        if(left==null && right==null) return true;
        if(left==null || right==null) return false;
        
        return checkIsSymmetric(left.left,right.right) && checkIsSymmetric(left.right,right.left) && left.val==right.val;
    }

    public boolean isSymmetric(TreeNode root) {
        return checkIsSymmetric(root.left,root.right); 
    }
}
