Question : https://leetcode.com/problems/binary-tree-zigzag-level-order-traversal/description/

Solution : 
/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    /*
    public List<List<Integer>> zigzagLevelOrder(TreeNode root) {
        List<List<Integer>> res = new ArrayList<>();

        if(root==null) return res;
        Queue<TreeNode> q = new LinkedList<>();
        q.offer(root);
        boolean flag = true;
        while(!q.isEmpty()) {
            int n = q.size();
            List<Integer> ds = new ArrayList<>();
            while(n-->0) {
                TreeNode node = q.poll();
                ds.add(node.val);
                if(node.left!=null) {
                    q.offer(node.left);
                }
                if(node.right!=null) {
                    q.offer(node.right);
                }
            }
            if(flag) {
                res.add(new ArrayList<>(ds));
                flag = false;
            }else {
                Collections.reverse(ds);
                res.add(new ArrayList<>(ds));
                flag = true;
            }
        }

        return res;
    }
    */

    public void getLevelOrder(TreeNode node,List<List<Integer>> res,int level) {
        if(node==null) return;

        if(level>=res.size()) {
            res.add(new ArrayList<>());
        }

        if(level%2==0) {
            res.get(level).add(node.val);
        }else {
            res.get(level).add(0,node.val);
        }

        getLevelOrder(node.left,res,level+1);
        getLevelOrder(node.right,res,level+1);
    }

    public List<List<Integer>> zigzagLevelOrder(TreeNode root) {
        List<List<Integer>> res = new ArrayList<>();
        if(root==null) return res;

        getLevelOrder(root,res,0);

        return res;
    }
}
